<% provide(:title, "編集") %>
    <div class="row">
      <h1>ユーザー編集</h1>
      
        <div class="mb-4">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>
        </div>

      <div class="margin-left">
          <div class="mb-3">
              <%= f.label :username  , class:'form-label' %>
              <%= f.text_field :username, autofocus: true ,autocomplete: "username", class: 'form-control w-75' %>
          </div>

          <div class="mb-3">
              <%= f.label :email, class:'form-label' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control w-75' %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="mb-3">
              <%= f.label :password, class:'form-label' %> <i  class='form-label-red'>※ 変更しない場合は空白でいいです。</i><br/>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control w-75' %>
              <% if @minimum_password_length %>
              <% end %>
            </div>
        
            <div class="mb-5">
              <%= f.label :password_confirmation, class:'form-label' %> <em class='form-label-red'>※ <%= @minimum_password_length %>文字以上のパスワード</em><br/>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control w-75' %>
            </div>

            <div class="mb-4">
              <%= f.submit "更新", class: "btn btn-success w-75", style: 'background-color: rgba(91, 33, 0, 0.97);border-color: rgba(91, 33, 0, 0.97);' %>
            </div>
          <% end %>
        </div>
          <div class="mt-3 center">
            <i class='form-label-red'>※ 削除すると、すべての登録した情報が見れなくなります。<br>それでも削除しますか？<%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: " 削除すると、すべての登録した情報が見れなくなります。それでも削除しますか？" }, method: :delete ,class:"btn btn-outline-danger btn-sm mt-3" %></i><br>
          </div>
        <div class="margin-left">
          <div class="mt-1">
              <%= link_to "Back" , :back , class: 'link' %>
            </div>
