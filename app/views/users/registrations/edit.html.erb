<% provide(:title, "編集") %>
  <div class="user-edit-contents">
    <div class="row">
      <div class="mb-2">
        <h1>プロフィール編集</h1>
      </div>

        <div class="margin-left"><!-- margin-left -->
          <div class="mb-4">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
          </div>

              <div class="field">
                <div class="mb-3">
                  <%= f.label :username , class:'form-label' %>
                  <%= f.text_field :username, autofocus: true, autocomplete: "username" , class: 'form-control w-75 '  %>
                </div>
              </div>

              <div class="field">
                <div class="mb-3">
                  <%= f.label :email , class:'form-label' %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control w-75'  %>
                </div>
              </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>

              <div class="field">
                  <div class="mb-3">
                    <%= f.label :password , class:'form-label' %><i  class='form-label-red'>※ 変更しない場合は空白でいいです。</i><br/>
                    <%= f.password_field :password, autocomplete: "new-password" , class: 'form-control w-75'  %>
                  </div>
              </div>

              <div class="field">
                <div class="mb-5">
                  <%= f.label :password_confirmation , class:'form-label' %><em class='form-label-red'>※ <%= @minimum_password_length %>文字以上のパスワード</em><br/>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: 'form-control w-75'  %>
                </div>
              </div>

              <div class="actions">
                  <div class="mb-4">
                    <%= f.submit "保存", class:"user-update-btn btn btn-outline-success w-75" %>
                </div>
              </div>

          <% end %>

        </div><!-- margin-left -->

              <div class="mt-3 center">
                <i class='form-label-red'>※ 削除すると、すべての登録した情報が見れなくなります。<br>それでも削除しますか？<%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: " ⚠️削除すると、すべての登録した情報が見れなくなります。それでも削除しますか？" }, method: :delete ,class:"btn btn-outline-danger btn-sm mt-3" %></i><br>
              </div>

            <div class="margin-left">
              <div class="mt-1">
                <%= link_to "Back" , :back , class: 'link' %>
              </div>
            </div>
          <div>
        
    <div>
  </div>
</div>